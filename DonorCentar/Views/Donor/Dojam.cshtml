@model DonorCentar.Web.ViewModels.DonorDojamVM

@{
    ViewData["Title"] = "Dojam";
    Layout = "~/Views/Shared/_Donor.cshtml";

}





<div class="content-box">
    <div class="page-box">
        <h1>@ViewData["Title"]</h1>
        <form asp-action="SpasiDojam">
            <div class="form-group">
                <label for="Naslov">Tip dojma</label>
                <select asp-for="DojamId" asp-items="@Model.DojamList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="Sadrzaj">Opis</label>
                <textarea id="Sadrzaj" asp-for="Opis" class="form-control bigger-box"></textarea>

            </div>
            <div>
                <input asp-for="DonacijaId" hidden />
            </div>
            <button type="submit" class="btn btn-dark">Spasi</button>
        </form>

        </div>
</div>