@using X.PagedList;
@using X.PagedList.Mvc.Core;

@*@model DonorCentar.ViewModels.ObavijestiVM*@
@model IPagedList<DonorCentar.Models.Obavijest>

@{
    ViewData["Title"] = "Obavijesti";
    Layout = "~/Views/Shared/_Administrator.cshtml";
}
@*<br />
<br />
<br />
<br />
<br />*@

<div class="content-box">
        <div class="page-box">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">
                    Obavijesti
                </a>
                <ul class="list-group">
                    @foreach (var x in Model)
                    {

                        <li class="list-group-item">
                            <h3>@x.Naslov</h3>
                            <p>@x.Sadrzaj</p>
                            <p>Datum objave : @x.Vrijeme</p>
                            <a asp-action="IzbrisiObavijest" asp-route-obavijestId="@x.ObavijestId" class="btn btn-danger float-right ml-2">Izbriši</a>

                            <a asp-action="EditObavijest" asp-route-Id="@x.ObavijestId" class="btn btn-success float-right mr-2">Uredi</a>

                        </li>


                    }
                </ul>
            </div>
            @Html.PagedListPager(Model, page => Url.Action("Obavijesti", new { page }))
        </div>
    </div>

